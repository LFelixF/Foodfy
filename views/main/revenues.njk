{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock head %}

{% block content %}
    <main>
        <div class="page-content">
            <section class="cards">
                {% for item in items %}
                    <div class="card" id="{{items.indexOf(item)}}">
                        <div class="card-img">
                            <img src="{{item.img_url}}" alt="{{item.title}}">
                        </div>

                        <div class="card-content">
                            <p class="card-revenue">{{item.title}}</p>
                            <p class="card-author">{{item.author}}</p>
                        </div>
                    </div>
                {% endfor %}
            </section>
        </div>
    </main>
{% endblock content %}